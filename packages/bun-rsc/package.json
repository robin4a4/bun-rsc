{
  "version": "0.0.1",
  "name": "bun-rsc",
  "type": "module",
  "types": "./dist/serve/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/serve/external.d.ts",
      "default": "./dist/serve/external.js"
    },
    "./client-condition-export": "./dist/serve/client-condition-export.js",
    "./server-condition-export": "./dist/serve/server-condition-export.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "bun-rsc": "./dist/build/cli.js"
  },
  "scripts": {
    "lint": "bunx @biomejs/biome check --apply ./src",
    "build": "bun run ./src/exports/build.ts",
    "release": "bun run build && bunx changeset publish && git push --follow-tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robin4a4/bun-rsc"
  },
  "keywords": [
    "react",
    "bun",
    "ssr",
    "rsc",
    "framework",
    "server"
  ],
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/web": "^0.0.127",
    "@types/recursive-readdir": "^2.2.4",
    "esbuild-plugin-d.ts": "1.2.3",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "cac": "^6.7.14",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.33",
    "react": "18.3.0-canary-03d6f7cf0-20240209",
    "react-dom": "18.3.0-canary-03d6f7cf0-20240209",
    "react-server-dom-webpack": "18.3.0-canary-03d6f7cf0-20240209",
    "recursive-readdir": "^2.2.3",
    "ws": "^8.16.0",
    "picocolors": "^1.0.0",
    "gradient-string": "2.0.2"
  }
}
