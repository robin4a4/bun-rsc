{
  "version": "0.0.1",
  "name": "bun-rsc",
  "type": "module",
  "types": "./dist/types.d.ts",
  "bin": {
    "bun-rsc": "./dist/cli/cli.js"
  },
  "scripts": {
    "lint": "bunx @biomejs/biome check --apply ./src",
    "dev": "bun --watch run ./src/cli/build.ts",
    "build": "bun run ./src/cli/build.ts",
    "release": "bun run build && bunx changeset publish && git push --follow-tags"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robin4a4/bun-rsc"
  },
  "keywords": [
    "react",
    "bun",
    "ssr",
    "rsc",
    "framework",
    "server"
  ],
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/web": "^0.0.127",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/recursive-readdir": "^2.2.4",
    "arg": "^5.0.2",
    "bun-plugin-dts": "^0.2.1",
    "cac": "^6.7.14",
    "postcss": "^8.4.33",
    "react": "18.3.0-canary-41f0e9dae-20230907",
    "react-dom": "18.3.0-canary-41f0e9dae-20230907",
    "react-server-dom-webpack": "18.3.0-canary-41f0e9dae-20230907",
    "recursive-readdir": "^2.2.3",
    "ws": "^8.16.0"
  }
}
